{% extends 'back.html.twig' %}

{% block title %}Sujet index{% endblock %}

{% block body %}
    <h1>Sujet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idsujet</th>
                <th>Domaine</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sujet in sujets %}
            <tr>
                <td>{{ sujet.idsujet }}</td>
                <td>{{ sujet.domaine }}</td>
                <td>
                    <a href="{{ path('app_sujet_show', {'idsujet': sujet.idsujet}) }}">show</a>
                    <a href="{{ path('app_sujet_edit', {'idsujet': sujet.idsujet}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sujet_new') }}">Create new</a>
{% endblock %}
