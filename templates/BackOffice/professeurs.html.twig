                <h6 class="mb-4">Professor Information</h6>
                <!-- Search bar -->
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
                    <input id="searchInput" type="text" class="form-control" placeholder="Search Professor" aria-label="Search" aria-describedby="basic-addon1">
                </div>
                <div class="table-responsive">
                                 <div class="d-flex justify-content-end mb-3">
    <a href="{{ path('app_professeur_new') }}" class="btn btn-primary">Add Professor</a>
</div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Birth Date</th>
                                <th scope="col">Phone Number</th>
                                <th scope="col">CIN</th>
                                <th scope="col">Actions</th> <!-- New column for actions -->
                            </tr>
                        </thead>
                        <tbody id="searchTableBody">
                            {% for professor in professeurs %}
                            <tr>
                                <th scope="row">{{ professor.id }}</th>
                                <td>{{ professor.firstName }}</td>
                                <td>{{ professor.lastName }}</td>
                                <td>{{ professor.email }}</td>
                                <td>{{ professor.birthDate|date('Y-m-d') }}</td>
                                <td>{{ professor.phoneNumber }}</td>
                                <td>{{ professor.cin }}</td>
                                <td>
                                    <!-- Edit and Delete buttons -->
                                    <div class="btn-group" role="group">
                                        <!-- Edit button -->
                                        <a href="{{ path('app_professeur_edit', {'id': professor.id}) }}" class="btn btn-primary">Edit</a>
                                        
                                        <!-- Delete button -->
                                        <form action="{{ path('app_professeur_delete', {'id': professor.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this professor?')">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ professor.id) }}">
                                            <button type="submit" class="btn btn-danger ms-2">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
