<script>
$(document).ready(function() {
    $('#searchInput').on('input', function() {
        var searchTerm = $(this).val();

        // Send an AJAX request to the search route
        $.ajax({
            url: "{{ path('student_search') }}",
            type: 'GET',
            data: {
                q: searchTerm
            },
            dataType: 'json', // Specify the expected data type as JSON
            success: function(response) {
                // Clear previous search results
                $('#searchTableBody').empty();
                
                // Iterate over the returned JSON data and append rows to the table
                $.each(response, function(index, student) {
                    $('#searchTableBody').append(
                        '<tr>' +
                            '<th scope="row">' + student.id + '</th>' +
                            '<td>' + student.firstName + '</td>' +
                            '<td>' + student.lastName + '</td>' +
                            '<td>' + student.email + '</td>' +
                            '<td>' + student.birthDate + '</td>' +
                            '<td>' + student.phoneNumber + '</td>' +
                            '<td>' + student.cin + '</td>' +
                            '<td>' +
                                '<div class="btn-group" role="group">' +
                                    '<a href="/app/student/edit/' + student.id + '" class="btn btn-primary">Edit</a>' +
                                    '<form action="/app/student/delete/' + student.id + '" method="post" onsubmit="return confirm(\'Are you sure you want to delete this student?\')">' +
                                        '<input type="hidden" name="_method" value="DELETE">' +
                                        '<input type="hidden" name="_token" value="' + student.csrfToken + '">' +
                                        '<button type="submit" class="btn btn-danger ms-2">Delete</button>' +
                                    '</form>' +
                                    '<a href="/unban/student/' + student.id + '" class="btn btn-success ms-2" onclick="return confirm(\'Are you sure you want to unban this student?\')">Unban</a>' +
                                '</div>' +
                            '</td>' +
                        '</tr>'
                    );
                });
            }
        });
    });
});
</script>

<!-- filter ajax -->
<script>
document.getElementById('sortByFirstNameBtn').addEventListener('click', function() {
    // Send an AJAX request to fetch the sorted students
    fetch('{{ path('student_list_sorted_by_first_name') }}')
        .then(response => response.json())
        .then(data => {
            // Update the table with the sorted data
            updateTable(data);
        })
        .catch(error => console.error('Error:', error));
});

function updateTable(data) {
    // Clear the existing table rows
    document.getElementById('searchTableBody').innerHTML = '';

    // Iterate over the sorted data and append rows to the table
    data.forEach(student => {
        document.getElementById('searchTableBody').innerHTML += `
            <tr>
                <th scope="row">${student.id}</th>
                <td>${student.firstName}</td>
                <td>${student.lastName}</td>
                <td>${student.email}</td>
                <td>${student.birthDate}</td>
                <td>${student.phoneNumber}</td>
                <td>${student.cin}</td>
                <!-- Add other columns as needed -->
            </tr>
        `;
    });
}

</script>
