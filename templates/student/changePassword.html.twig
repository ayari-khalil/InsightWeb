{% extends 'student/studentDashboard.html.twig' %}
{% block title %}Changer mot de passe{% endblock %}

{% block content %}
    <div class="container-fluid pt-4 px-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="h-100 bg-light rounded p-4">
                    <h1>Changer votre mot de passe</h1>
                    <div class="d-flex justify-content-center">
                        <form method="post">
                            {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.currentPassword) }}
                                {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(form.currentPassword) %}
                                    <div class="text-danger">{{ form_errors(form.currentPassword) }}</div>
                                {% endif %}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.newPassword) }}
                                {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(form.newPassword) %}
                                    <div class="text-danger">{{ form_errors(form.newPassword) }}</div>
                                {% endif %}
                            </div>
                            <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
