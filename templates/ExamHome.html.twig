    </div>
</div>

<!-- Custom alert container -->
<div id="custom-alert" class="custom-alert"></div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const favoriteIcons = document.querySelectorAll('.favorite-icon');
        const favoriteTestsSection = document.getElementById('favorite-tests-section');
        const toggleIcon = document.getElementById('toggle-favorite-tests-icon');

        // Load favorites from local storage
        let favorites = JSON.parse(localStorage.getItem('favorites')) || [];

        // Set initial favorite state based on local storage
        favoriteIcons.forEach(icon => {
            const testId = icon.getAttribute('data-id');
            if (favorites.includes(testId)) {
                icon.classList.add('favorited');
            }
        });

        favoriteIcons.forEach(icon => {
            icon.addEventListener('click', function () {
                const testId = this.getAttribute('data-id');
                this.classList.toggle('favorited');
                const index = favorites.indexOf(testId);
                if (this.classList.contains('favorited')) {
                    if (index === -1) {
                        favorites.push(testId);
                    }
                    showCustomAlert(`Test ${testId} added to favorites.`, 'success');
                } else {
                    if (index !== -1) {
                        favorites.splice(index, 1);
                    }
                    showCustomAlert(`Test ${testId} removed from favorites.`, 'danger');
                }
                // Save favorites to local storage
                localStorage.setItem('favorites', JSON.stringify(favorites));

                // Update favorite tests section
                updateFavoriteTests();
            });
        });

        // Function to display custom alert
        function showCustomAlert(message, type) {
            const alertContainer = document.getElementById('custom-alert');
            alertContainer.innerHTML = `<div class="alert alert-${type}" role="alert">${message}</div>`;
            setTimeout(() => {
                alertContainer.innerHTML = '';
            }, 3000); // Remove the alert after 3 seconds
        }

        // Function to update favorite tests section
        function updateFavoriteTests() {
            const favoriteTestsContainer = document.getElementById('favorite-tests');
            if (favorites.length === 0) {
                favoriteTestsContainer.innerHTML = '<p>No favorite tests yet.</p>';
            } else {
                favoriteTestsContainer.innerHTML = '<ul>';
                favorites.forEach(testId => {
                    // Here you can fetch additional information about the test using its ID
                    favoriteTestsContainer.innerHTML += `<li>Test ID: ${testId}</li>`;
                });
                favoriteTestsContainer.innerHTML += '</ul>';
            }
        }

        // Toggle visibility of favorite tests section when the icon is clicked
        toggleIcon.addEventListener('click', function () {
            if (favoriteTestsSection.style.display === 'none') {
                favoriteTestsSection.style.display = 'block';
            } else {
                favoriteTestsSection.style.display = 'none';
            }
        });

        // Initial update of favorite tests section
        updateFavoriteTests();
    });
    
