{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.questionText) }}
                {{ form_widget(form.questionText, {'attr': {'class': 'form-control form-control-sm'}}) }}
                {{ form_errors(form.questionText) }}
            </div>

            <div class="form-group">
                {{ form_label(form.test) }}
                {{ form_widget(form.test, {'attr': {'class': 'form-control form-control-sm'}}) }}
                {{ form_errors(form.test) }}
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
