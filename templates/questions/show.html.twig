{% extends 'default.html.twig' %}

{% block title %}Questions{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Questions</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>QuestionId</th>
                        <td>{{ question.questionId }}</td>
                    </tr>
                    <tr>
                        <th>QuestionText</th>
                        <td>{{ question.questionText }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="row justify-content-center">
                <div class="col-md-5">
                    <a href="{{ path('app_questions_index') }}" class="btn btn-success btn-block mt-3">Back to List</a>
                    <a href="{{ path('app_questions_edit', {'questionId': question.questionId}) }}" class="btn btn-primary btn-block mt-3">Edit</a>
                </div>
            </div>

            {{ include('questions/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
