
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<form id="deleteForm" method="post" action="{{ path('app_quiz_delete', {'qid': quiz.qid}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.qid) }}">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <button type="button" class="btn btn-secondary btn-block mt-3" onclick="showDeleteConfirmation()">Delete</button>
        </div>
    </div>
</form>

<script>
    function showDeleteConfirmation() {
        Swal.fire({
            title: 'Are you sure?',
            text: 'You will not be able to recover this item!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel',
            customClass: {
                title: 'h5',  // Smaller title
                content: 'h6', // Smaller text
                confirmButton: 'btn btn-danger', // Red color for confirm button
                cancelButton: 'btn btn-secondary ml-2' // Secondary color for cancel button
            }
        }).then((result) => {
            if (result.isConfirmed) {
                // If confirmed, submit the form
                document.getElementById('deleteForm').submit();
            }
        });
    }
</script>
